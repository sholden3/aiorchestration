{
  "extends": "./app.config.json",
  "app": {
    "environment": "production"
  },
  "backend": {
    "host": "0.0.0.0",
    "port": 8000,
    "database": {
      "url": "${DATABASE_URL}",
      "echo": false
    }
  },
  "frontend": {
    "electron": {
      "dev_tools": false
    }
  },
  "logging": {
    "level": "WARNING",
    "console": {
      "colorize": false
    }
  },
  "security": {
    "auth": {
      "enabled": true,
      "jwt_secret": "${JWT_SECRET}"
    }
  },
  "features": {
    "ai_integration": {
      "enabled": true,
      "provider": "${AI_PROVIDER}",
      "api_key": "${AI_API_KEY}"
    }
  }
}
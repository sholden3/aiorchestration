{
  "version": "0.1.0",
  "phase": "2.5_implementation",
  "week": 1,
  "lastUpdated": "2025-01-27",
  "expiresOn": "2025-02-17",
  
  "enforcement": {
    "preCommitBlocking": false,
    "preCommitVersion": "0.1",
    "cicdBlocking": true,
    "documentationRequired": false,
    "coverageThreshold": 0,
    "lintingEnforced": false,
    "securityScanBlocking": true
  },
  
  "features": {
    "backend": {
      "cacheCircuitBreaker": true,
      "twoTierCache": true,
      "websocketResourceLimits": true,
      "databaseConnectionPooling": true,
      "startupCoordination": true,
      "aiIntegration": false,
      "realAIEndpoints": false,
      "mockAIResponses": true
    },
    "frontend": {
      "memoryLeakFixes": true,
      "ipcErrorBoundaries": true,
      "enhancedTerminalService": false,
      "websocketReconnection": true,
      "agentManagement": true,
      "realTimeMetrics": true
    },
    "testing": {
      "runAllTests": false,
      "runUnitTests": true,
      "runIntegrationTests": false,
      "runE2ETests": false,
      "runChaosTests": false,
      "mockExternalServices": true,
      "enableObservability": true,
      "trackPerformanceBaselines": true
    },
    "governance": {
      "aiGovernanceHooks": false,
      "costTracking": false,
      "tokenLimits": false,
      "auditLogging": true,
      "complianceChecks": false,
      "personaOrchestration": true
    }
  },
  
  "rollout": {
    "week1": {
      "name": "Foundation",
      "coverageTarget": 0,
      "coverageBlocking": false,
      "documentationTarget": 50,
      "documentationBlocking": false,
      "enforcement": "minimal",
      "allowedDebt": "unlimited",
      "focus": ["setup", "basic-tests", "ci-cd"]
    },
    "week2": {
      "name": "Progressive",
      "coverageTarget": 40,
      "coverageBlocking": false,
      "documentationTarget": 75,
      "documentationBlocking": true,
      "enforcement": "progressive",
      "allowedDebt": "tracked",
      "focus": ["coverage", "documentation", "integration"]
    },
    "week3": {
      "name": "Maturing",
      "coverageTarget": 80,
      "coverageBlocking": true,
      "documentationTarget": 100,
      "documentationBlocking": true,
      "enforcement": "standard",
      "allowedDebt": "none",
      "focus": ["quality", "performance", "governance"]
    },
    "week4": {
      "name": "Production Ready",
      "coverageTarget": 80,
      "coverageBlocking": true,
      "documentationTarget": 100,
      "documentationBlocking": true,
      "enforcement": "strict",
      "allowedDebt": "none",
      "focus": ["stability", "security", "deployment"]
    }
  },
  
  "metrics": {
    "trackCoverage": true,
    "trackDocumentation": true,
    "trackTechnicalDebt": true,
    "trackAssumptions": true,
    "trackPerformance": true,
    "reportingInterval": "daily"
  },
  
  "overrides": {
    "allowManualOverride": true,
    "requireApproval": true,
    "approvers": ["Alex Novak", "Dr. Sarah Chen"],
    "overrideLog": "config/feature-flag-overrides.log"
  },
  
  "environments": {
    "development": {
      "enforcement": "minimal",
      "allFeaturesEnabled": true
    },
    "staging": {
      "enforcement": "progressive",
      "featuresFromConfig": true
    },
    "production": {
      "enforcement": "strict",
      "onlyStableFeatures": true
    }
  },
  
  "hooks": {
    "onWeekChange": "scripts/advance-standards.sh",
    "onDebtThreshold": "scripts/alert-tech-debt.sh",
    "onCoverageMilestone": "scripts/celebrate-coverage.sh"
  }
}
{
  "$schema": "https://governance.ai/schemas/events/v1.0.0",
  "version": "1.0.0",
  "last_updated": "2025-01-28T19:00:00Z",
  "event_mappings": {
    "git.pre_commit": {
      "id": "git_pre_commit",
      "description": "Triggered before git commit",
      "enabled": true,
      "priority": 9,
      "validators": [
        "documentation",
        "testing",
        "security",
        "code_quality"
      ],
      "persona_selection": {
        "mode": "automatic",
        "mandatory": ["alex_novak", "sarah_chen"],
        "conditional": {
          "if_security_files": ["jordan_rivera"],
          "if_test_files": ["sam_martinez"],
          "if_documentation": ["michael_torres"]
        }
      },
      "consensus_strategy": "majority",
      "timeout_seconds": 30,
      "cache_results": true,
      "cache_ttl_seconds": 30
    },
    "git.pre_push": {
      "id": "git_pre_push",
      "description": "Triggered before git push",
      "enabled": true,
      "priority": 8,
      "validators": [
        "testing",
        "security",
        "performance"
      ],
      "persona_selection": {
        "mode": "automatic",
        "mandatory": ["alex_novak", "sarah_chen"],
        "conditional": {
          "if_breaking_changes": ["david_kim"],
          "if_database_changes": ["rachel_foster"]
        }
      },
      "consensus_strategy": "qualified_majority",
      "timeout_seconds": 45
    },
    "agent.spawn": {
      "id": "agent_spawn",
      "description": "AI agent creation request",
      "enabled": true,
      "priority": 10,
      "validators": [
        "security",
        "resource_limits",
        "governance"
      ],
      "persona_selection": {
        "mode": "explicit",
        "mandatory": ["alex_novak", "sarah_chen"],
        "optional": ["jordan_rivera", "kevin_zhang"]
      },
      "consensus_strategy": "unanimous",
      "timeout_seconds": 60,
      "require_justification": true
    },
    "agent.operation": {
      "id": "agent_operation",
      "description": "AI agent performing operation",
      "enabled": true,
      "priority": 7,
      "validators": [
        "governance",
        "security"
      ],
      "persona_selection": {
        "mode": "context_based",
        "base": ["alex_novak", "sarah_chen"]
      },
      "consensus_strategy": "majority",
      "timeout_seconds": 30
    },
    "consensus.required": {
      "id": "consensus_required",
      "description": "Explicit consensus request",
      "enabled": true,
      "priority": 9,
      "validators": [],
      "persona_selection": {
        "mode": "explicit",
        "use_request_personas": true
      },
      "consensus_strategy": "specified_in_request",
      "timeout_seconds": 120
    },
    "validation.security": {
      "id": "security_validation",
      "description": "Security-specific validation",
      "enabled": true,
      "priority": 10,
      "validators": ["security"],
      "persona_selection": {
        "mode": "fixed",
        "personas": ["jordan_rivera", "sarah_chen"]
      },
      "consensus_strategy": "veto_power",
      "timeout_seconds": 30
    },
    "validation.performance": {
      "id": "performance_validation",
      "description": "Performance validation",
      "enabled": true,
      "priority": 6,
      "validators": ["performance"],
      "persona_selection": {
        "mode": "fixed",
        "personas": ["kevin_zhang", "alex_novak"]
      },
      "consensus_strategy": "majority",
      "timeout_seconds": 20
    },
    "deployment.production": {
      "id": "production_deployment",
      "description": "Production deployment validation",
      "enabled": true,
      "priority": 10,
      "validators": [
        "security",
        "testing",
        "performance",
        "documentation"
      ],
      "persona_selection": {
        "mode": "all_available",
        "mandatory": ["alex_novak", "sarah_chen", "jordan_rivera", "lisa_anderson"],
        "optional": ["sam_martinez", "kevin_zhang", "david_kim"]
      },
      "consensus_strategy": "qualified_majority",
      "timeout_seconds": 300,
      "require_justification": true,
      "audit_level": "detailed"
    },
    "error.critical": {
      "id": "critical_error",
      "description": "Critical error occurred",
      "enabled": true,
      "priority": 10,
      "validators": [],
      "persona_selection": {
        "mode": "emergency",
        "personas": ["alex_novak", "sarah_chen"]
      },
      "consensus_strategy": "fast_track",
      "timeout_seconds": 10,
      "trigger_circuit_breaker": true
    }
  },
  "event_routing": {
    "default_handler": "governance.process",
    "priority_queue_enabled": true,
    "max_concurrent_events": 10,
    "dead_letter_queue_enabled": true,
    "retry_policy": {
      "max_retries": 3,
      "backoff_multiplier": 2,
      "initial_delay_ms": 1000
    }
  },
  "event_persistence": {
    "store_all_events": true,
    "retention_days": 90,
    "compress_after_days": 7,
    "archive_location": ".governance/events/archive"
  }
}
{
  "version": "1.0.0",
  "session": {
    "max_duration_hours": 8,
    "warning_threshold_hours": 7,
    "timezone": "UTC",
    "auto_extend": false,
    "require_architects": ["Alex Novak", "Dr. Sarah Chen"],
    "storage_path": ".governance/session/current.json"
  },
  "validation": {
    "pre_commit": {
      "enabled": true,
      "checks": [
        "session_management",
        "code_documentation",
        "test_coverage",
        "architect_approval",
        "governance_compliance"
      ],
      "bypass_for_hotfix": false,
      "debug_mode": false
    },
    "session_start": {
      "checks": [
        "backend_health",
        "frontend_build",
        "test_baseline",
        "documentation_currency"
      ],
      "fail_fast": false,
      "verbose": true
    },
    "session_end": {
      "archive_session": true,
      "generate_report": true,
      "update_audit_log": true
    }
  },
  "platform": {
    "windows": {
      "python_command": "python",
      "npm_command": "npm.cmd",
      "encoding": "utf-8",
      "line_endings": "crlf"
    },
    "unix": {
      "python_command": "python3",
      "npm_command": "npm",
      "encoding": "utf-8",
      "line_endings": "lf"
    }
  },
  "logging": {
    "level": "INFO",
    "format": "json",
    "output_dir": ".governance/logs",
    "rotate_daily": true,
    "max_size_mb": 10
  },
  "audit": {
    "enabled": true,
    "audit_file": ".governance/audit/audit_${date}.jsonl",
    "include_git_diff": true,
    "include_test_results": true
  },
  "thresholds": {
    "min_test_coverage": 60,
    "max_complexity": 10,
    "max_file_size_kb": 500,
    "min_documentation_score": 70
  },
  "notifications": {
    "session_expiry_warning": true,
    "test_failure_alert": true,
    "governance_violation_alert": true
  }
}
{
  "name": "ai-development-assistant",
  "version": "1.0.0",
  "description": "Personal AI Development Assistant with Claude Integration",
  "main": "electron/main.js",
  "scripts": {
    "ng": "ng",
    "start": "npm run build && npm run electron",
    "build": "ng build",
    "build:electron": "ng build --configuration=electron",
    "watch": "ng build --watch --configuration development",
    "electron": "electron .",
    "electron:serve": "concurrently \"npm run watch\" \"npm run electron:dev\"",
    "electron:dev": "wait-on http://localhost:4200 && electron . --dev",
    "backend": "python backend/main.py",
    "dev": "concurrently \"npm run electron:serve\" \"npm run backend\"",
    "test": "ng test",
    "package": "electron-builder"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.0.0",
    "@angular/cdk": "^17.0.0",
    "@angular/common": "^17.0.0",
    "@angular/compiler": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@angular/forms": "^17.0.0",
    "@angular/material": "^17.0.0",
    "@angular/platform-browser": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "@angular/router": "^17.0.0",
    "chart.js": "^4.4.0",
    "node-pty": "^1.0.0",
    "rxjs": "^7.8.0",
    "tslib": "^2.6.0",
    "zone.js": "^0.14.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.0",
    "@angular/cli": "^17.0.0",
    "@angular/compiler-cli": "^17.0.0",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.2.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.ai.assistant",
    "productName": "AI Development Assistant",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      "dist/**/*",
      "backend/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  }
}
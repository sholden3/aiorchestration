{
  "$schema": "https://governance.ai/schemas/rules/performance/v1.0.0",
  "version": "1.0.0",
  "last_updated": "2025-01-28T21:00:00Z",
  "description": "Performance standards and requirements",
  
  "response_time_requirements": {
    "api_endpoints": {
      "get_requests": 200,
      "post_requests": 500,
      "complex_queries": 2000,
      "file_operations": 1000
    },
    "frontend_operations": {
      "page_load": 3000,
      "interaction_response": 100,
      "search_results": 500,
      "form_submission": 1000
    },
    "governance_operations": {
      "rule_validation": 100,
      "persona_invocation": 50,
      "consensus_achievement": 200,
      "correlation_tracking": 10
    }
  },
  
  "resource_limits": {
    "memory": {
      "max_heap_mb": 512,
      "max_correlation_size_kb": 100,
      "max_cache_size_mb": 1024,
      "leak_detection": true
    },
    "cpu": {
      "max_usage_percent": 80,
      "throttle_at": 70,
      "parallel_operations": 4,
      "async_by_default": true
    },
    "disk": {
      "max_log_size_mb": 100,
      "max_temp_files_mb": 500,
      "cleanup_interval_hours": 24,
      "compression": true
    },
    "network": {
      "max_connections": 100,
      "connection_timeout_ms": 5000,
      "keepalive_seconds": 60,
      "retry_limit": 3
    }
  },
  
  "optimization_requirements": {
    "code_optimization": {
      "bundle_size_kb": {
        "initial": 500,
        "lazy_loaded": 200,
        "total": 2000
      },
      "tree_shaking": true,
      "minification": true,
      "source_maps": "production",
      "code_splitting": true
    },
    "database_optimization": {
      "index_usage": true,
      "query_plans": "analyzed",
      "n_plus_one": "prohibited",
      "batch_operations": true,
      "connection_pooling": true
    },
    "cache_optimization": {
      "strategy": "multi_tier",
      "invalidation": "smart",
      "preloading": true,
      "compression": true
    }
  },
  
  "testing_requirements": {
    "performance_tests": {
      "load_testing": {
        "users": 100,
        "duration_minutes": 10,
        "ramp_up_seconds": 60
      },
      "stress_testing": {
        "users": 1000,
        "duration_minutes": 5,
        "break_point": true
      },
      "endurance_testing": {
        "users": 50,
        "duration_hours": 8,
        "memory_monitoring": true
      }
    },
    "benchmarks": {
      "run_on": ["commit", "pr", "release"],
      "regression_threshold": 0.1,
      "comparison": "previous_version",
      "report_format": "html"
    }
  },
  
  "progressive_enforcement": {
    "development": {
      "level": "relaxed",
      "response_time_multiplier": 2,
      "resource_limit_multiplier": 1.5,
      "warnings_only": true,
      "allow_bypass": true
    },
    "staging": {
      "level": "standard",
      "response_time_multiplier": 1.5,
      "resource_limit_multiplier": 1.2,
      "block_on_critical": true,
      "allow_bypass": false
    },
    "production": {
      "level": "strict",
      "response_time_multiplier": 1,
      "resource_limit_multiplier": 1,
      "block_on_any_violation": true,
      "emergency_bypass_only": true
    },
    "emergency": {
      "level": "bypass",
      "duration_minutes": 30,
      "requires_approval": ["alex_novak", "sarah_chen"],
      "audit_required": true,
      "auto_revert": true
    }
  },
  
  "monitoring": {
    "real_time_metrics": [
      "response_time_p50",
      "response_time_p95",
      "response_time_p99",
      "error_rate",
      "throughput"
    ],
    "alerts": {
      "response_time_spike": {
        "threshold_multiplier": 2,
        "duration_seconds": 60,
        "severity": "warning"
      },
      "error_rate_high": {
        "threshold_percent": 5,
        "duration_seconds": 300,
        "severity": "critical"
      },
      "resource_exhaustion": {
        "threshold_percent": 90,
        "duration_seconds": 120,
        "severity": "critical"
      }
    }
  },
  
  "enforcement": {
    "performance_regression": {
      "level": "error",
      "blocks_deployment": true,
      "threshold_percent": 10
    },
    "resource_limit_exceeded": {
      "level": "error",
      "action": "throttle",
      "alert": true
    },
    "sla_violation": {
      "level": "critical",
      "escalate": true,
      "page_oncall": true
    }
  }
}